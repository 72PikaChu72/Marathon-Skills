        <Image Name="MainSponsorImage"  HorizontalAlignment="Left" Height="328" Margin="150,376,0,0" VerticalAlignment="Top" Width="544" Loaded="MainSponsorImage_Loaded"/>
        <ListView Name="Sponsors" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="1245,376,108,303" FontFamily="Bahnschrift SemiBold" FontSize="24" Loaded="ListView_Loaded">
            <ListView.View>
                <GridView>
                    <GridViewColumn Width="500"/>
                </GridView>
            </ListView.View>
        </ListView>
        <Label Content="Главный спонсор" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="150,307,1203,624" FontFamily="Bahnschrift SemiBold" FontSize="48"/>
        <Label Content="Спонсоры" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="1245,302,108,629" FontFamily="Bahnschrift SemiBold" FontSize="48"/>
        <Label  Name="MainSponsor" Content="" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="150,714,1203,217" FontFamily="Bahnschrift SemiBold" FontSize="48"/>
        <Label Content="В сумме:" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="1245,748,429,182" FontFamily="Bahnschrift SemiBold" FontSize="48"/>
        <Label Name="Count" Content="" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="1476,748,108,182" FontFamily="Bahnschrift SemiBold" FontSize="48"/>

    </Grid>
</Page>
